{
  "name": "coverage-viewer-frontend",
  "version": "1.0.0",
  "description": "Mithril TypeScript Example",
  "scripts": {
    "compile": "browserify --debug src/main.ts -p [ tsify --project src/tsconfig.json ] -o public/app.js",
    "build": "browserify src/main.ts -p [ tsify --project src/tsconfig.json ] | uglifyjs -cm -o public/app.js",
    "clean": "rm -f public/app.js",
    "start": "budo src/main.ts:js/app.js -p 3000 --dir public --live=*.{html,js,css} -- --debug -p [ tsify --project src/tsconfig.json ]",
    "copy": "cp public/* ../static/ && cp node_modules/bulma/css/bulma.* ../static/"
  },
  "license": "MIT",
  "dependencies": {
    "bulma": "0.9.0",
    "install": "^0.13.0",
    "mithril": "^2.0.4",
    "npm": "^6.14.5"
  },
  "devDependencies": {
    "@types/mithril": "^2.0.0",
    "@types/highlightjs": "^9.12.0",
    "browserify": "^16.5.0",
    "budo": "^11.6.3",
    "npm-run-all": "^4.1.5",
    "tsify": "^4.0.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "uglify-js": "^3.6.0"
  }
}
